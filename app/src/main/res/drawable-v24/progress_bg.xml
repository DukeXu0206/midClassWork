<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dp" />         <!-- 圆角 -->

            <solid android:color="@color/colorLightBlue4" />   <!-- 描边 -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="10dp"/>
                <stroke android:color="@color/colorLightBlue4"
                    android:width="2dp"/>
                <gradient
                    android:angle="0"
                    android:startColor="@color/colorLightBlue6"
                    android:endColor="@color/colorLightBlue7"/>
            </shape>
        </clip>
    </item>
</layer-list>